<div>
  <h1><%= @restaurant.name %></h1>
  <h3><%= @restaurant.category %> Cousine</h3>
  <hr>
  <p><small>Adress: <%= @restaurant.address %></small></p>
  <p><small>Phone number: <%= @restaurant.phone_number %></small></p>
</div>
<hr>
<div>
  <p><%= link_to 'back to main page', restaurants_path %></p>
</div>
<hr>
<div>
  <h3>Write a review</h3>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.label :rating %>
    <%= f.collection_radio_buttons :rating, ["5", '4', '3', '2', '1', '0'], :first, :last, item_wrapper_tag: false, boolean_style: :inline do |b| %>
      <%= b.label(:"data-value" => b.value) { b.radio_button + b.text } %>
    <% end %><br>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
<hr>
<div>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %> - <%= review.rating %> Stars
      </li>
    <% end %>
  </ul>
</div>
